<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="using:Bref.Controls"
        xmlns:vm="using:Bref.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Bref.Views.MainWindow"
        Title="Bref"
        Width="800" Height="600"
        Background="#1E1E1E">

    <!-- macOS menu bar - File menu -->
    <NativeMenu.Menu>
        <NativeMenu>
            <NativeMenuItem Header="File">
                <NativeMenu>
                    <NativeMenuItem Header="Open Video..." Gesture="Cmd+O" Click="OpenVideoMenuItem_Click" />
                </NativeMenu>
            </NativeMenuItem>
        </NativeMenu>
    </NativeMenu.Menu>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Load Button -->
            <RowDefinition Height="*"/>    <!-- Video Player -->
            <RowDefinition Height="Auto"/> <!-- Status -->
            <RowDefinition Height="Auto"/> <!-- Timeline -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Bref Video Editor - Week 4 Preview"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,0,0,20"/>

        <!-- Load Video Button -->
        <Button Grid.Row="1"
                Name="LoadVideoButton"
                Content="Load MP4 Video"
                HorizontalAlignment="Left"
                Padding="20,10"
                FontSize="16"
                Margin="0,0,0,20"
                Click="LoadVideoButton_Click"/>

        <!-- Video Player -->
        <controls:VideoPlayerControl Grid.Row="2"
                                     Name="VideoPlayer"
                                     MinHeight="300"
                                     Margin="0,0,0,20"
                                     IsVisible="False"/>

        <!-- Status Line (minimal info) -->
        <TextBlock Grid.Row="3"
                   Name="StatusTextBlock"
                   Text="No video loaded"
                   Foreground="#CCCCCC"
                   FontSize="12"
                   Margin="0,0,0,10"
                   TextTrimming="CharacterEllipsis"/>

        <!-- Timeline Control -->
        <controls:TimelineControl Grid.Row="4"
                                  Name="TimelineControl"
                                  Height="200"
                                  Margin="0,0,0,0"
                                  IsVisible="False"/>
    </Grid>
</Window>
