<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Bref.App"
             Name="Bref"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <NativeMenu.Menu>
        <NativeMenu>
            <!-- Application menu - About and Quit at root level -->
            <NativeMenuItem Header="About Bref" Click="AboutMenuItem_Click" />
            <NativeMenuItemSeparator />
            <NativeMenuItem Header="Quit Bref" Gesture="Cmd+Q" Click="QuitMenuItem_Click" />
        </NativeMenu>
    </NativeMenu.Menu>

    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
</Application>