<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="using:SpartaCut.Converters"
             xmlns:icons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             x:Class="SpartaCut.App"
             Name="Sparta Cut"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <!-- macOS Native Menu Bar - Root level menus -->
    <NativeMenu.Menu>
        <NativeMenu>
            <!-- Application menu items (shown under "Sparta Cut" menu on macOS) -->
            <NativeMenuItem Header="About Sparta Cut" Click="AboutMenuItem_Click" />
        </NativeMenu>
    </NativeMenu.Menu>

    <Application.Resources>
        <converters:MuteIconConverter x:Key="MuteIconConverter"/>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme />
        <icons:MaterialIconStyles />
    </Application.Styles>
</Application>